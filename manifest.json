{
  "name": "Color picker",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "./html/ExternalPopup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/ContentScript.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_start",
      "exclude_globs": ["*/chrome/newtab*"]
    }
  ],

  "background": {
    "service_worker": "js/Background.js"
  }
}
